    <head>
        <title>
            EmailTypeForm
        </title>
    </head>
    <body style="text-align:center;color:aquamarine">
        <form action="./submitForm.html">
            <div>
            Email<input type="email" name="email">
            </div>
            <div>
             Password<input type="password" name="CurrentPassword">   
            </div>
            <div>
                <input type="submit" value="login" name="login">
            </div>

        </form>
    </body>
